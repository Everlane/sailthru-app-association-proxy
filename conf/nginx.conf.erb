daemon off;
worker_processes 4;

events {
	worker_connections 1024;
}

http {
  server_tokens off;

	client_body_timeout 5;

  server {
      listen <%= ENV['PORT'] %>;

      location /apple-app-site-association {
          proxy_pass <%= ENV['APP_ASSOCIATION_HOST'] %>;
          proxy_ssl_session_reuse on;
      }

      location / {
          proxy_pass http://cb.sailthru.com;
          proxy_ssl_session_reuse off;
      }
  }
}
